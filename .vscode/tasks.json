{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install (editable + dev)",
      "type": "shell",
      "command": "python3 -m pip install -e \".[dev]\"",
      "problemMatcher": []
    },
    {
      "label": "Test (pytest)",
      "type": "shell",
      "command": "python3 -m pytest -q",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": "python3 -m ruff check .",
      "problemMatcher": []
    },
    {
      "label": "Format check (ruff)",
      "type": "shell",
      "command": "python3 -m ruff format --check .",
      "problemMatcher": []
    },
    {
      "label": "Run CLI (dummy sample)",
      "type": "shell",
      "command": "triage-assistant triage --adapter dummy --title \"Crash when saving\" --body \"Steps to reproduce:\\n1. Open\\n2. Save\\nVersion: 1.0\" --pretty",
      "problemMatcher": []
    },
    {
      "label": "Local eval (dummy)",
      "type": "shell",
      "command": "triage-assistant eval --adapter dummy --dataset datasets/triage_dataset.csv --report reports/eval/local_eval.md",
      "problemMatcher": []
    }
  ]
}
